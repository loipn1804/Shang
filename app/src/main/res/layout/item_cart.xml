<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dm_5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvProduct"
            android:layout_width="@dimen/dm_90dp"
            android:layout_height="@dimen/dm_90dp"
            android:padding="@dimen/dm_2dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/product_name_sample"
                android:textColor="@color/txt_black_55"
                android:textSize="@dimen/txt_12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_2dp"
                android:text="Modiado"
                android:textColor="@color/txt_black_77"
                android:textSize="@dimen/txt_10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_2dp"
                android:text="$0.00"
                android:textColor="@color/main_color"
                android:textSize="@dimen/txt_15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/lnlListOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="$0.00"
                android:textColor="@color/txt_black_33"
                android:textSize="@dimen/txt_15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm_3dp"
                android:gravity="center"
                android:text="X"
                android:textColor="@color/txt_black_33"
                android:textSize="@dimen/txt_15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm_5dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imvAddQuantity"
                    android:layout_width="@dimen/dm_30dp"
                    android:layout_height="@dimen/dm_30dp"
                    android:padding="@dimen/dm_10dp"
                    android:src="@drawable/ic_add_quantity" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txtQuantity"
                        android:layout_width="@dimen/dm_50dp"
                        android:layout_height="@dimen/dm_30dp"
                        android:background="@drawable/bg_txt_quantity"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:paddingLeft="@dimen/dm_2dp"
                        android:paddingRight="@dimen/dm_2dp"
                        android:singleLine="true"
                        android:text="99999"
                        android:textColor="@color/txt_black_33"
                        android:textSize="@dimen/txt_15sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imvSubQuantity"
                    android:layout_width="@dimen/dm_30dp"
                    android:layout_height="@dimen/dm_30dp"
                    android:padding="@dimen/dm_10dp"
                    android:src="@drawable/ic_sub_quantity" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>