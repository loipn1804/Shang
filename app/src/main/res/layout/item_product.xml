<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_profile_left_menu"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rltCover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_1dp"
        android:layout_marginRight="@dimen/dm_1dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dm_1dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dm_5dp"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:orientation="vertical"
                android:padding="@dimen/dm_5dp">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:maxLines="2"
                    android:text="Mobiado Professional V3 AUro/Deha/Viro/Snora New"
                    android:textColor="@color/txt_black_55"
                    android:textSize="@dimen/txt_12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm_5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtOldPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dm_10dp"
                        android:text="$0.00"
                        android:textColor="@color/txt_black_77"
                        android:textSize="@dimen/txt_15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtNewPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textColor="@color/txt_black_33"
                        android:textSize="@dimen/txt_15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rltNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imvNewTop"
                android:layout_width="@dimen/dm_4dp_ex"
                android:layout_height="@dimen/dm_1dp_ex"
                android:layout_marginLeft="@dimen/dm_1dp_neg"
                android:layout_toRightOf="@+id/imvNew"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_new_top" />

            <ImageView
                android:id="@+id/imvNewLeft"
                android:layout_width="@dimen/dm_1dp_ex"
                android:layout_height="@dimen/dm_4dp_ex"
                android:layout_below="@+id/imvNew"
                android:layout_marginTop="@dimen/dm_1dp_neg"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_new_left" />

            <ImageView
                android:id="@+id/imvNew"
                android:layout_width="@dimen/dm_30dp"
                android:layout_height="@dimen/dm_30dp"
                android:src="@drawable/ic_new" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>