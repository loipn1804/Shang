<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:minWidth="2000dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_15dp"
        android:layout_marginRight="@dimen/dm_15dp"
        android:background="@color/transparent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dm_15dp"
            android:background="@drawable/corner_white"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dm_10dp"
            android:paddingTop="@dimen/dm_10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_30dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dm_10dp"
                android:paddingRight="@dimen/dm_10dp"
                android:singleLine="true"
                android:text="1 pt = $1 eVoucher"
                android:textColor="@color/txt_black_55"
                android:textSize="@dimen/txt_15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_30dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dm_10dp"
                android:paddingRight="@dimen/dm_10dp"
                android:singleLine="true"
                android:text="10 pt = $10 eVoucher"
                android:textColor="@color/txt_black_55"
                android:textSize="@dimen/txt_15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_30dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dm_10dp"
                android:paddingRight="@dimen/dm_10dp"
                android:singleLine="true"
                android:text="100 pt = $100 eVoucher"
                android:textColor="@color/txt_black_55"
                android:textSize="@dimen/txt_15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_30dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dm_10dp"
                android:paddingRight="@dimen/dm_10dp"
                android:singleLine="true"
                android:text="134 pt = $134 eVoucher"
                android:textColor="@color/txt_black_55"
                android:textSize="@dimen/txt_15sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imvClose"
            android:layout_width="@dimen/dm_30dp"
            android:layout_height="@dimen/dm_30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/shadow_delete"
            android:padding="@dimen/dm_3dp"
            android:src="@drawable/ic_delete_red" />
    </RelativeLayout>
</LinearLayout>