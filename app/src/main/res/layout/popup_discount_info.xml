<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:minWidth="2000dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_15dp"
        android:layout_marginRight="@dimen/dm_15dp"
        android:background="@color/transparent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dm_15dp"
            android:background="@drawable/corner_white"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dm_10dp"
            android:paddingTop="@dimen/dm_10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_10dp"
                android:paddingLeft="@dimen/dm_10dp"
                android:paddingRight="@dimen/dm_10dp">

                <TextView
                    android:id="@+id/txtEVoucherLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="eVOUCHER"
                    android:textColor="@color/txt_black"
                    android:textSize="@dimen/txt_12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtEVoucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="$0.00"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/txt_12sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lnlListVoucher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dm_10dp"
                android:layout_marginTop="@dimen/dm_10dp"
                android:paddingLeft="@dimen/dm_10dp"
                android:paddingRight="@dimen/dm_10dp">

                <TextView
                    android:id="@+id/txtCouponLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DISCOUNT CODE"
                    android:textColor="@color/txt_black"
                    android:textSize="@dimen/txt_12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCoupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="$0.00"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/txt_12sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imvClose"
            android:layout_width="@dimen/dm_30dp"
            android:layout_height="@dimen/dm_30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/shadow_delete"
            android:padding="@dimen/dm_3dp"
            android:src="@drawable/ic_delete_red" />
    </RelativeLayout>
</LinearLayout>