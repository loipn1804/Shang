<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dm_20dp"
    android:layout_marginRight="@dimen/dm_20dp"
    android:background="@color/white"
    android:gravity="center"
    android:minWidth="2000dp"
    android:orientation="vertical"
    android:padding="@dimen/dm_20dp">

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Make default for"
        android:textColor="@color/txt_black_55"
        android:textSize="@dimen/txt_18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvShipping"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dm_10dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/popup_shipping_unchoose" />

        <ImageView
            android:id="@+id/imvBilling"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_10dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/popup_billing_unchoose" />
    </LinearLayout>
</LinearLayout>